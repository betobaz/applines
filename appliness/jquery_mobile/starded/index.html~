	<script type="text/javascript">
		$(function(){
				$.ajax({
					type: "GET",
					url: "data/questions.xml",
					dataTupe: "xml",
					success: function(xml){
						var titleQuestion = null,
							items = null;
						$(xml).find('question').each(function(item, index){
							titleQuestion = $(this).find('title').text();
							items += '<li><a href="page2.html">'+titleQuestion+'</a></li>';
						});
						$('#listQuestions').html(items)
						$('#listQuestions').listView('refresh');
					}
				});
		});
	</script>
